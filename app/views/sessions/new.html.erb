<h1><%= t(".title") %></h1>

<%= link_to t(".login"), auth_at_provider_path(provider: :twitter) %>

<%= simple_form_for(:session,
                    url: sessions_path,
                    html: { class: 'form-horizontal' }) do |f| %>

  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :remember_me, as: :boolean %>
  <%= f.submit t(".submit") %>
<% end %>
