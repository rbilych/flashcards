<!DOCTYPE html>
<html>
<head>
  <title>Flashcards</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "<i class='fa fa-language'></i> Flashcards".html_safe, root_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><%= link_to t("menu.decks"), decks_path %></li>
            <li><%= link_to t("menu.new_card"), new_card_path %></li>
            <li><%= link_to t("menu.profile"), edit_profile_path(current_user) %></li>
            <li><%= link_to t("menu.logout"), log_out_path, method: :delete %></li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <%= t("menu.language") %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "EN", locale: "en" %></li>
                <li><%= link_to "RU", locale: "ru" %></li>
              </ul>
            </li>
            <li><%= link_to t("menu.signup"), new_registration_path %></li>
            <li><%= link_to t("menu.login"), log_in_path %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container">
    <div class="messages">
      <%= render "shared/messages" %>
    </div>

    <%= yield %>
  </div>

  <div class="footer">
    <div class="container text-center">
      <p class="copyright">
        <i class='fa fa-language'></i> Flashcard.tk &copy; 2015 |
        Created by: <a href="http://rbilych.github.io">rbilych</a>
      </p>
    </div>
  </div>
</body>
</html>
