<% if card.image.exists? %>
  <%= image_tag card.image.url %>
<% end %>

<%= simple_form_for(card, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :image, as: :file %>
  <%= f.input :deck_id, collection: current_user.decks, include_blank: false %>
  <%= f.input :original_text %>
  <%= f.input :translated_text %>
  <%= f.input :review_date,
              default: ((Date.today + 3.days) if card.new_record?) %>
  <%= f.button :submit %>
<% end %>
